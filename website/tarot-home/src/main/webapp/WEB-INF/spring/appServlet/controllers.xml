<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:task="http://www.springframework.org/schema/task"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
		http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-4.1.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">

    <!-- Maps '/' requests to the 'home' view -->
    <mvc:view-controller path="/" view-name="shop"/>

    <context:component-scan base-package="com.myee.tarot"/>

    <mvc:interceptors>
        <!-- Changes the locale when a 'locale' request parameter is sent; e.g. /?locale=de -->
        <bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor"/>
        <bean class="org.springframework.orm.jpa.support.OpenEntityManagerInViewInterceptor"/>

        <mvc:interceptor>
            <mvc:mapping path="/shop/**"/>
            <bean class="com.myee.tarot.web.filter.CustomerFilter"/>
        </mvc:interceptor>

        <mvc:interceptor>
            <mvc:mapping path="/customer/**"/>
            <bean class="com.myee.tarot.web.filter.CustomerFilter"/>
        </mvc:interceptor>

        <mvc:interceptor>
            <mvc:mapping path="/admin/**"/>
            <bean class="com.myee.tarot.web.filter.AdminFilter"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <mvc:annotation-driven>
        <mvc:message-converters register-defaults="true">
            <bean class="com.myee.tarot.core.support.MappingFastJsonHttpMessageConverter">
                <property name="supportedMediaTypes">
                    <list>
                        <value>application/json;charset=UTF-8</value>
                        <value>text/html;charset=UTF-8</value>
                    </list>
                </property>
            </bean>
        </mvc:message-converters>
    </mvc:annotation-driven>
</beans>